<flags ADD_SUBDIR="1" />

<flags FFLAGS="-O3 -ffree-form -ffree-line-length-none -Dcompiler=2 "/>

<!--Some magic to retrieve the mcfm library over http, and link it hardcoding its path in the resulting library, so that LD_LIBRARY_PATH is not required. -->
<Flags LDFLAGS="-Wl,-rpath,$(CMSSW_BASE)/src/ZZMatrixElement/MELA/data/$(SCRAM_ARCH)  $(shell $(CMSSW_BASE)/src/ZZMatrixElement/MELA/data/retrieve.csh $(SCRAM_ARCH)) -L $(CMSSW_BASE)/src/ZZMatrixElement/MELA/data/$(SCRAM_ARCH) -lmcfm_7p0 -lgfortran $(CMSSW_BASE)/src/ZZMatrixElement/MELA/data/$(SCRAM_ARCH)/NNPDFDriver.o" />


<use name="FWCore/ParameterSet"/>
<use name="f77compiler"/>
<use name="root"/>
<use name="rootmath"/>
<use name="roofit"/>
<use name="roofitcore"/>
<use name="CLHEP"/>

<export>
  <lib   name="1"/>
  <use name="mcfm_7p0"/>   <!--For this to work, one needs to specify mcfm as a scram tool.-->
</export>
